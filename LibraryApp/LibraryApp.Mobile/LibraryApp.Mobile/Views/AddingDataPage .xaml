<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://xamarin.com/schemas/2014/forms"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             x:Class="LibraryApp.Mobile.Views.AddingDataPage"
             xmlns:vm="clr-namespace:LibraryApp.Mobile.ViewModels"
             Title="Add">
    <ContentPage.BindingContext>
        <vm:AddingDataViewModel />
    </ContentPage.BindingContext>
    <ContentPage.Content>
        <ScrollView>
            <StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Button Text="Add Author" Command="{Binding AuthorPageCommand}" HorizontalOptions="FillAndExpand"></Button>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Button Text="Add Category" Command="{Binding CategoryPageCommand}" HorizontalOptions="FillAndExpand"></Button>
                </StackLayout>
                <StackLayout Orientation="Horizontal">
                    <Button Text="Add Publisher" Command="{Binding PublisherPageCommand}" HorizontalOptions="FillAndExpand"></Button>
                </StackLayout>
            </StackLayout>
        </ScrollView>
    </ContentPage.Content>
</ContentPage>